{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./js",
    "rootDir": "./source/ts",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "source/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "js"
  ]
} 